<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="task"
            type="com.example.firstapplication.data.Task"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:context="com.example.firstapplication.features.tasks.TasksActivity">

        <View
            android:id="@+id/view"
            android:layout_width="7dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@{task.label.color}"
            tools:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/task_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="8dp"
            android:text="@{task.title}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/view"
            app:layout_constraintRight_toLeftOf="@+id/progress_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/preview_task_title"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="27dp"/>

        <View
            android:id="@+id/progress_view"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="8dp"
            tools:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="22dp"/>
    </android.support.constraint.ConstraintLayout>
</layout>


